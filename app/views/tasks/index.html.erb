<h3>予定一覧</h3>

<% if flash[:notice] %>
 <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>


  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.start_date.strftime("%Y年%m月%d日") %></td>
        <td><%= task.end_date.strftime("%Y年%m月%d日") %></td>
        <td><%= task.is_all_day ? '◯': '' %></td>
        <td><%= task.updated_at.strftime("%Y年%m月%d日%H時%M分") %></td>
        <td>
         <%= link_to "詳細", task %>
        </td>
        <td>
         <%= link_to "編集", [:edit, task] %>
        </td>
        <td>
         <%= link_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class ="information">

    <a class = "information-1"><%= "合計予定数：#{@tasks.count}件" %></a>

    <a class ="information-2"><%= "本日の日付：#{Date.today}" %></a>

</div>
<p><%= link_to "予定の新規登録", :new_task %></p>
