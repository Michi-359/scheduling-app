<h3>ユーザー詳細</h3>

<%= form_with model: @task do |f| %>
  <table>
    <tr>
      <th>タイトル</th>
      <td><%= @task.title %></td>
    </tr>
    <tr>
      <th>開始日</th>
      <td><%= l @task.start_date %></td>
    </tr>

    <tr>
      <th>終了日</th>
      <td><%= l @task.end_date %></td>
    </tr>

    <tr>
      <th>終日</th>
      <td><%= @task.is_all_day ? '◯': '' %></td>
    </tr>

    <tr>
      <th>スケジュールメモ</th>
      <td><%= @task.memo %></td>
    </tr>
  </table>

<% end %>
<div>
  <ul>
   <%= link_to "編集する", :edit_task %>
   <%= link_to "一覧に戻る", :tasks %> 
  </ul>
</div>